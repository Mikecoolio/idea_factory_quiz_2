<div>
    <%= form_for @user do |f| %>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
        <br>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
        <br>
        <%= f.label :email %>
        <%= f.text_area :email %>
        <br>
        <%= f.label :password %>
        <%= f.text_area :password %>
        <br>
        <%= f.submit %>
    <% end %>
</div>
